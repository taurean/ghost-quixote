
{{!< default}}

<section class="entry-directory">
{{#get "posts" include="date,url" filter="tags:writing"}}
    {{#foreach posts}}
      <article class="entry-snippet">
      <h2>{{title}}</h2>
      <h3>{{date}}</h3>
  <p>{{excerpt character="256"}}</p>
<a href="../{{slug}}" class="btn btn--small read-more-btn">Read More <span class="right-arrow">&#8594;</span></a>
</article>

    {{/foreach}}
{{/get}}
</section>

