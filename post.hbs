{{!< default}}

{{!-- The comment above "< default" means - insert everything in this file into
    the {{{body}}} of the default.hbs template, containing the blog header/footer. --}}

{{!-- Everything inside the #post tags pulls data from the post --}}





{{#post}}

{{#has tag="writing"}}


<article class="blog-entry">

  <img class="featured-image" src="{{image}}">

  <h1 class="post-title">{{title}}</h1>

<h2>
<time class="post-date" datetime="{{date format="MMMM Do, YYYY"}}">{{date format="MMMM Do, YYYY"}}</time>
</h2>


{{content}}
</article>

{{/has}}

{{!-- Case Study  --}}
{{#has tag="workstudy"}}

<article class="workstudy">

  {{content}}

</article>


{{/has}}
{{/post}}
